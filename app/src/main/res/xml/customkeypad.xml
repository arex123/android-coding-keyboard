<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0dp"
    android:verticalGap="0dp"
    android:keyHeight="40dp"
    android:keyWidth="20%p"
    android:id="@+id/keyboard_view"
    android:background="#FF0000"
    android:keyPreviewOffset="0dp"
    android:keyPreviewHeight="0dp"
    >


    <Row android:horizontalGap="0dp"
        android:verticalGap="0dp" android:keyHeight="30dp">
        <Key android:keyLabel="/" android:keyEdgeFlags="left" />
        <Key android:keyLabel="\\" />
        <Key android:keyLabel="?" />
        <Key android:keyLabel="@"/>
        <Key android:keyLabel="'" />
        <Key android:keyLabel='"' />
<!--        <Key android:keyLabel="," />-->
        <Key android:keyLabel='|' />
        <Key android:keyLabel="del" android:codes="15" android:keyEdgeFlags="right" />

    </Row>
    <Row android:horizontalGap="0dp">
        <Key android:keyLabel="`" android:keyEdgeFlags="left"/>
        <Key android:keyLabel=":"/>
        <Key android:keyLabel=";"/>
        <Key android:keyLabel="~"/>
        <Key android:keyLabel="#"/>
        <Key android:keyLabel="$"/>
        <Key android:keyLabel="^"/>
        <Key android:keyLabel="%"/>
        <Key android:keyLabel="*"/>
        <Key android:keyLabel="-"/>
        <Key android:keyLabel="+"/>
        <Key android:keyLabel="_" android:keyEdgeFlags="right"/>
    </Row>

    <Row android:horizontalGap="0dp">
        <Key android:keyLabel="&lt;" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="{"/>
        <Key android:keyLabel="["/>
        <Key android:keyLabel="("/>
        <Key android:keyLabel="="/>
        <Key android:keyLabel="!"/>
        <Key android:keyLabel="&amp;"/>
        <Key android:keyLabel=")"/>
        <Key android:keyLabel="]"/>
        <Key android:keyLabel="}"/>
        <Key android:keyLabel="&gt;" android:keyEdgeFlags="right"/>
    </Row>


    <Row>
        <Key android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="2"/>
        <Key android:keyLabel="3"/>
        <Key android:keyLabel="4"/>
        <Key android:keyLabel="5"/>
        <Key android:keyLabel="6"/>
        <Key android:keyLabel="7"/>
        <Key android:keyLabel="8"/>
        <Key android:keyLabel="9"/>
        <Key android:keyLabel="0" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="q" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="w"/>
        <Key android:keyLabel="e"/>
        <Key android:keyLabel="r"/>
        <Key android:keyLabel="t"/>
        <Key android:keyLabel="y"/>
        <Key android:keyLabel="u"/>
        <Key android:keyLabel="i"/>
        <Key android:keyLabel="o"/>
        <Key android:keyLabel="p" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="a" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="s"/>
        <Key android:keyLabel="d"/>
        <Key android:keyLabel="f"/>
        <Key android:keyLabel="g"/>
        <Key android:keyLabel="h"/>
        <Key android:keyLabel="j"/>
        <Key android:keyLabel="k"/>
        <Key android:keyLabel="l" android:keyEdgeFlags="right"/>
    </Row>


    <Row>
        <Key android:keyIcon="@drawable/caplock" android:id="@+id/key_caps_lock" android:codes="13" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="z"/>
        <Key android:keyLabel="x"/>
        <Key android:keyLabel="c"/>
        <Key android:keyLabel="v"/>
        <Key android:keyLabel="b"/>
        <Key android:keyLabel="n"/>
        <Key android:keyLabel="m"/>
        <Key android:keyIcon="@drawable/backspace" android:codes="-5" android:keyEdgeFlags="right"/>
    </Row>

<!--    <Row android:keyWidth="33%p">-->
    <Row>
<!--        <Key android:keyIcon="@drawable/moredot" android:codes="11" android:keyEdgeFlags="left"/>-->
        <Key android:keyIcon="@drawable/globe" android:codes="10" android:keyEdgeFlags="left"/>

        <Key android:keyLabel="."/>
        <Key android:keyIcon="@drawable/underscorespace" android:keyWidth="140dp" android:codes="32" />
        <Key android:keyLabel="," />

        <Key android:keyIcon="@drawable/newline" android:codes="-6" android:keyEdgeFlags="right"/>
    </Row>

</Keyboard>